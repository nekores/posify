{
  "name": "posify",
  "version": "1.0.0",
  "private": true,
  "description": "Posify - Point of Sale System",
  "author": "Posify",
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build && node fix-standalone-static.js",
    "start": "next start",
    "lint": "eslint",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "npx ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force",
    "db:reset-password": "npx ts-node -O '{\"module\":\"commonjs\"}' scripts/reset-password.ts",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac --x64",
    "electron:build:mac:arm64": "npm run build && electron-builder --mac --arm64",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "clean": "rm -rf dist .next",
    "clean:all": "rm -rf dist .next node_modules/.cache",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@hookform/resolvers": "^5.0.1",
    "@mui/icons-material": "^7.1.0",
    "@mui/material": "^7.1.0",
    "@mui/material-nextjs": "^7.1.0",
    "@prisma/client": "^6.9.0",
    "chart.js": "^4.5.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "jsonwebtoken": "^9.0.2",
    "lightningcss": "^1.30.2",
    "next": "^14.2.21",
    "next-auth": "^4.24.11",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.56.4",
    "react-hot-toast": "^2.5.2",
    "recharts": "^2.15.3",
    "zod": "^3.25.56",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "bcryptjs": "^3.0.3",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.21",
    "mysql2": "^3.16.0",
    "pg": "^8.16.3",
    "prisma": "^6.9.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.posify.app",
    "productName": "Posify",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      ".next/standalone/**/*",
      ".next/static/**/*",
      ".next/server/**/*",
      "public/**/*",
      "server.prod.js",
      "fix-standalone-static.js",
      "package.json",
      "!node_modules"
    ],
    "extraResources": [
      {
        "from": "prisma",
        "to": "prisma"
      },
      {
        "from": ".next/standalone",
        "to": ".next/standalone",
        "filter": ["**/*", "**/node_modules/**/*", "**/.next/static/**/*"]
      },
      {
        "from": ".next/static",
        "to": ".next/static"
      },
      {
        "from": ".next/standalone/node_modules",
        "to": ".next/standalone/node_modules",
        "filter": ["**/*"]
      },
      {
        "from": "server.prod.js",
        "to": "server.prod.js"
      }
    ],
    "asarUnpack": [
      "node_modules/@prisma/client",
      "node_modules/.prisma"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "optionalDependencies": {
    "lightningcss-darwin-x64": "^1.30.2"
  }
}
